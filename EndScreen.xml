<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#be262626"
    tools:context="gobblingkraken.wildlifemania.EndActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score:10/10"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff07d88b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GREAT JOB"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:textColor="#ffdcdc60" />

    <Button
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:text="PLAY AGAIN?"
        android:textStyle="bold"
        android:textSize="24dp"
        android:id="@+id/button12"
        android:background="#ff39a3ff"
        android:layout_above="@+id/button11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:text="EXIT"
        android:textStyle="bold"
        android:textSize="24dp"
        android:id="@+id/button11"
        android:background="#ffff3f08"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
