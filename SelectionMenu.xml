<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gobblingkraken.wildlifemania.SelectionActivity"
    android:clickable="true"
    android:id="@+id/Selection"
    android:background="#be262626"
    android:focusableInTouchMode="false"
    android:focusable="true"
    android:touchscreenBlocksFocus="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DIFFICULTY"
        android:id="@+id/DifficultyText"
        android:textColor="#ff29ff24"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Easy"
        android:id="@+id/button"
        android:layout_below="@+id/DifficultyText"
        android:layout_centerHorizontal="true"
        android:background="#ff0f941e" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Medium"
        android:id="@+id/button2"
        android:background="#ffa366be"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Hard"
        android:id="@+id/button3"
        android:background="#ffb8b90f"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="29dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number Of Questions"
        android:id="@+id/NumberOfQuestions"
        android:textColor="#ff16faff"
        android:textSize="27dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="START"
        android:textSize="26dp"
        android:id="@+id/button6"
        android:background="#ff2888ed"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5"
        android:id="@+id/textView2"
        android:layout_below="@+id/NumberOfQuestions"
        android:layout_alignParentLeft="true"
        android:textColor="#ff29ff24"
        android:layout_marginTop="29dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="       10"
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:textColor="#ff29ff24"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_alignLeft="@+id/NumberOfQuestions"
        android:layout_alignStart="@+id/NumberOfQuestions" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="15"
        android:textColor="#ff29ff24"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="   20"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="#ff29ff24"
        android:layout_alignRight="@+id/NumberOfQuestions"
        android:layout_alignEnd="@+id/NumberOfQuestions"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/DifficultyText"
        android:layout_toEndOf="@+id/DifficultyText" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="25"
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:textColor="#ff29ff24"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignRight="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:text="Wildlife Galore"
        android:id="@+id/button5"
        android:background="#ffed5a6b"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="42dp" />


</RelativeLayout>
